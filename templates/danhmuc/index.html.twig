            </li>
            <li>
                <a href="#" class="">
                    <span class="icon"><ion-icon name="person-outline"></ion-icon></span>
                    <span class="title">category</span>
                </a>
            </li>
            <li>
                <a href="#" class="">
                    <span class="icon"><ion-icon name="chatbubble-outline"></ion-icon></span>
                    <span class="title">Message</span>
                </a>
            </li>
            <li>
                <a href="#" class="">
                    <span class="icon"><ion-icon name="help-outline"></ion-icon></span>
                    <span class="title">Help</span>
                </a>
            </li>
            <li>
                <a href="#" class="">
                    <span class="icon"><ion-icon name="settings-outline"></ion-icon></span>
                    <span class="title">Setting</span>
                </a>
            </li>
            <li>
                <a href="#" class="">
                    <span class="icon"><ion-icon name="time-outline"></ion-icon></span>
                    <span class="title">Password</span>
                </a>
            </li>
            <li>
                <a href="#" class="">
                    <span class="icon"><ion-icon name="log-out-outline"></ion-icon></span>
                    <span class="title">Sign Out</span>
                </a>
            </li>
        </ul>
    </div>
  <!-- main -->
  <div class="main">
      <div class="topbar">
          <div class="toggle">
              <ion-icon name="menu-outline"></ion-icon>
          </div>
          <div class="search">
              <label>
                  <input type="text" class="search-admin" placeholder="Search here">
                  <ion-icon name="search-outline"></ion-icon>
              </label>
          </div>
          <div class="user">
              <img src="https://scontent-hkg4-2.xx.fbcdn.net/v/t1.6435-1/157864744_118862420213315_3830171837531993159_n.jpg?stp=cp0_dst-jpg_p80x80&_nc_cat=111&ccb=1-5&_nc_sid=7206a8&_nc_ohc=_XaZ56RUAG8AX8bT5Wv&_nc_ht=scontent-hkg4-2.xx&oh=00_AT9mvA914YPQTE_ZksIdGOHBThipAabVZe0ReVPVgWVq4Q&oe=627FBD47">
          </div>
      </div>
      <!-- card -->
      <div class="cartBox">
          <div class="card">
              <div>
                  
                  <div class="numbers">1,5004</div>
                  <div class="cardName">Daily Views</div>
              </div>
              <div class="iconBox">
                  <ion-icon name="eye-outline"></ion-icon>
              </div>
              
          </div>
        
         
          <div class="card">
              <div>

                  <div class="numbers">80</div>
                  <div class="cardName">Sales</div>
              </div>
              <div class="iconBox">
                  <ion-icon name="cart-outline"></ion-icon>
              </div>
          </div>
         
          <div class="card">
              <div>

                  <div class="numbers">284</div>
                  <div class="cardName">comments</div>
              </div>
              <div class="iconBox">
                  <ion-icon name="chatbox-outline"></ion-icon>
              </div>
          </div>
          
          <div class="card">
              <div>

                  <div class="numbers">$7.842</div>
                  <div class="cardName">Earning</div>
              </div>
              <div class="iconBox">
                  <ion-icon name="cash-outline"></ion-icon>
              </div>
          </div>
        
      </div>
      <!-- Add charts -->
      <div class="graphBox">
          <!-- <h2>Text</h2> -->
          <div class="box">
              <canvas id="myChart"></canvas>
          </div>
          <div class="box">
              <canvas id="earning"></canvas>
          </div>
      </div>
      <!-- detail list -->

      <div class="details">
          <div class="recentOrders">
              <div class="cardHeader">
                  <h2>Product List</h2>
                  <a href="{{('../addDanhmuc')}}" class="btn add">
                    thêm
                  </a>
              </div>
              <table>

                  <thead>
                      <Tr>
                          <td>De qui</td>
                          <td>Mã Danh mục</td>
                          <td>Tên danh Mục</td>
                          
                          <td>Hành động</td>
                      </Tr>
                      
                  </thead>
                  <tbody>
                    {%for product in Danhmuc%}
                      <tr>
                       
                          <td>{{product.dequi}}</td>
                          <td>{{product.madm}}</td>
                          <td>{{product.tendm}}</td>
                          
                          <td>
                            <a href="{{path('removeDanhmuc', {'id':product.id})}}" class="btn delete">
                              xóa
                            </a>
                            <a href="{{path('updateDanhmuc', {'id':product.id})}}" class="btn update">
                              sửa
                            </a>
                           </td> 
                      </tr>
                     {% endfor %}
                  </tbody>
              </table>
              
          </div>
       
      </div>
  </div>
</div>
            
{% endblock%}